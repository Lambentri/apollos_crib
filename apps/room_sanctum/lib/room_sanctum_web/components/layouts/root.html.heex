<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <%= csrf_meta_tag() %>
  <%= live_title_tag assigns[:page_title] || "RoomSanctum", suffix: " Â· Apollos Crib" %>
  <link phx-track-static rel="stylesheet" href={Routes.static_path(@conn,
  "/assets/app.css")}/>
  <script defer phx-track-static type="text/javascript" src={Routes.static_path(@conn,
  "/assets/app.js")}></script>
  <script>
    (() => {
      const setTheme = (theme) => {
        if (theme === "system") {
          localStorage.removeItem("apollos:theme");
          // Remove theme attribute to let system preference take over
          document.documentElement.removeAttribute("data-theme");
          // Apply system theme based on media query
          const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'lofi';
          document.documentElement.setAttribute("data-theme", systemTheme);
        } else {
          localStorage.setItem("apollos:theme", theme);
          document.documentElement.setAttribute("data-theme", theme);
        }
      };

      // Apply saved theme or system preference on page load
      if (!document.documentElement.hasAttribute("data-theme")) {
        setTheme(localStorage.getItem("apollos:theme") || "system");
      }

      // Listen for cross-tab theme changes
      window.addEventListener("storage", (e) => {
        if (e.key === "apollos:theme") {
          setTheme(e.newValue || "system");
        }
      });
      
      // Listen for theme change events from components
      window.addEventListener("phx:set-theme", (e) => {
        setTheme(e.target.dataset.phxTheme || e.detail.theme);
      });

      // Listen for system theme changes
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        if (!localStorage.getItem("apollos:theme")) {
          setTheme("system");
        }
      });
    })();
  </script>
</head>
<body>
<div class="p-2">
  <div class="navbar bg-neutral text-accent sm:rounded-lg shadow-xl">
    <div class="navbar-start">
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"/>
          </svg>
        </label>
        <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-200 rounded-box w-52 z-10">
          <%= if @current_user do %>
          <li tabindex="0">
            <a class="justify-between">
              Services
              <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"/>
              </svg>
            </a>
            <._action_menu {assigns} />
          </li>
          <% end %>
          <hr>
          <li>
            <a class="justify-between">
              Account/Login
              <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"/>
              </svg>
            </a>
            <._user_menu {assigns} />
          </li>
        </ul>
      </div>
    </div>
    <div class="navbar-center">
      <a class="btn btn-ghost normal-case text-2xl neon" href="/">apollo's</a>
    </div>
    <div class="navbar-end hidden lg:flex">
      <ul class="menu menu-horizontal p-0 z-10">
        <%= if @current_user do %>
        <li tabindex="0">
          <a>
            Services
            <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
              <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
            </svg>
          </a>
          <._action_menu {assigns} />
        </li>
        <% end %>
        <li>
          <a class="justify-between">
            Account/Login
            <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
              <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
            </svg>
          </a>
          <._user_menu {assigns} />
        </li>
      </ul>
    </div>
  </div>
</div>
